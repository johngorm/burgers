<h1>Eat Da' Burger</h1>

<h3>Burger List</h3>
<div class="row">
	<div class='burger-list'>
		<ul>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						{{this.burger_name}}

						<form action="/{{this.id}}?_method=PUT" method='POST'>
							<input type="hidden" name='devour' value="true">
							<button type="submit">EAT!</button>
						</form>

					</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

	<div class='burger-list'>
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						<input type='text' name='name' placeholder='{{this.burger_name}}' readonly>
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>

<div class='row'>
	<div class='col-md-4 col-md-offset-4'>
		<h2>Create a new burger!</h2>
		<form class='create-update-form' action='/' method='POST'>
			<div class='form-group'>
				<label for='burg'>Burger Name:</label>
				<input type='text' id='burg' name='burger_name'>
			</div>
			<button type='submit'>Make Da' Burger</button>
		</form>
	</div>
</div>


	


</div>